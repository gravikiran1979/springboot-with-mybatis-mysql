<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Student">

    <!-- ResultMap Configuration -->
    <resultMap id="studentResultMap" type="com.practice.model.Student">
        <result property="studentId" column="STUDENT_ID"/>
        <result property="name" column="STUDENT_NAME"/>
        <result property="branch" column="BRANCH"/>
        <result property="percentage" column="PERCENTAGE"/>
        <result property="mobileNo" column="MOBILE_NO"/>
        <result property="emailId" column="EMAIL"/>
    </resultMap>

    <!-- Select All Operation -->
    <select id="getAllStudents"
            resultMap="studentResultMap"
            resultType="java.util.List"
            flushCache="false"
            useCache="true"
            timeout="10000"
            fetchSize="256"
            statementType="PREPARED">
        SELECT * FROM STUDENT ORDER BY STUDENT_ID;
    </select>

    <!-- Select By Id Operation -->
    <select id="getStudentById"
            parameterType="int"
            resultMap="studentResultMap"
            resultType="com.practice.model.Student"
            flushCache="false"
            useCache="true"
            timeout="10000"
            fetchSize="256"
            statementType="PREPARED">
        SELECT * FROM STUDENT WHERE STUDENT_ID = #{studentId};
    </select>

    <!-- Select By Id Operation -->
    <select id="getStudentByName"
            parameterType="java.lang.String"
            resultMap="studentResultMap"
            resultType="com.practice.model.Student"
            flushCache="false"
            useCache="true"
            timeout="10000"
            fetchSize="256"
            statementType="PREPARED">
        SELECT * FROM STUDENT WHERE STUDENT_NAME = #{name};
    </select>

    <!-- Insert Operation -->
    <insert id="saveStudent"
            parameterType="com.practice.model.Student"
            flushCache="true"
            statementType="PREPARED"
            useGeneratedKeys="true"
            keyProperty="studentId"
            keyColumn="student_id"
            timeout="20">
        INSERT INTO STUDENT
        (STUDENT_NAME, BRANCH, PERCENTAGE, MOBILE_NO, EMAIL )
        VALUES
        (#{name}, #{branch}, #{percentage}, #{mobileNo}, #{emailId});

    </insert>

    <!-- Update Operation -->
    <update id="updateStudent"
            parameterType="com.practice.model.Student"
            flushCache="true"
            statementType="PREPARED"
            timeout="20">
        UPDATE STUDENT SET
        STUDENT_NAME = #{name},
        BRANCH = #{branch},
        PERCENTAGE = #{percentage},
        MOBILE_NO = #{mobileNo},
        EMAIL = #{emailId}
        WHERE STUDENT_ID = #{studentId};
    </update>

    <!-- Delete Operation -->
    <delete id="deleteStudent"
            parameterType="int"
            flushCache="true"
            statementType="PREPARED"
            timeout="20">
        DELETE from STUDENT WHERE STUDENT_ID = #{studentId};
    </delete>

</mapper>